#!/bin/sh

# Get staged files matching extensions we care about
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx|json|md)$')

if [ -n "$STAGED_FILES" ]; then
  echo "Checking Prettier formatting on staged files..."
  
  # Try checking formatting
  deno run -A npm:prettier --check $STAGED_FILES >/dev/null 2>&1
  STATUS=$?

  if [ $STATUS -ne 0 ]; then
    echo "⚠️  Prettier issues found. Auto-fixing..."
    deno run -A npm:prettier --write $STAGED_FILES

    # Re-add the files to staging after fixing
    echo "$STAGED_FILES" | xargs git add
    echo "✅ Formatting fixed and staged."
  else
    echo "✅ All staged files are properly formatted."
  fi
fi